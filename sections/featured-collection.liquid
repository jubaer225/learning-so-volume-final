{{ 'featured-collection.css' | asset_url | stylesheet_tag }}

<section class="featured-collection">
  <div class="featured-collection__header">
    <h2 class="featured-collection__title">{{ section.settings.heading }}</h2>
    {% if section.settings.collection != blank %}
      <a class="featured-collection__view-all" href="{{ section.settings.collection.url }}">View all</a>
    {% endif %}
  </div>

  <div class="featured-collection__grid">
    {% if section.settings.collection != blank and section.settings.collection.products_count > 0 %}
      {% for product in section.settings.collection.products limit: 4 %}
        <a class="featured-collection__card" href="{{ product.url }}">
          <div class="featured-collection__image-wrap">
            {% if product.featured_image %}
              {{ product.featured_image | image_url: width: 600 | image_tag: loading: 'lazy', class: 'featured-collection__image', alt: product.title }}
            {% else %}
              <div class="featured-collection__placeholder">No image</div>
            {% endif %}
          </div>
          <div class="featured-collection__info">
            <h3 class="featured-collection__product-title">{{ product.title }}</h3>
            <p class="featured-collection__price">{{ product.price | money }}</p>
          </div>
        </a>
      {% endfor %}
    {% else %}
      {% for item in (1..4) %}
        <article class="featured-collection__card">
          <div class="featured-collection__image-wrap">
            <div class="featured-collection__placeholder">Product {{ item }}</div>
          </div>
          <div class="featured-collection__info">
            <h3 class="featured-collection__product-title">Example Product {{ item }}</h3>
            <p class="featured-collection__price">$0.00</p>
          </div>
        </article>
      {% endfor %}
    {% endif %}
  </div>
</section>

{% schema %}
  {
    "name": "Featured Collection",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Featured Collection"
      }, {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      }
    ],
    "presets": [
      {
        "name": "Featured Collection"
      }
    ]
  }
{% endschema %}